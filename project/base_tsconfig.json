{
    "compilerOptions": {
        "allowJs": false,
        "module": "commonjs",
        "target": "es2020",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "lib": [
        "es2020"
    ],
    "include": [
        "src/*",
        "src/**/*"
    ]
}